--display the database orderedby price.
SELECT * FROM store
ORDER BY price desc;

--what is the sum quantity of items for popularity?
SELECT popularity, SUM(quantity) FROM store GROUP BY popularity 

--what are most 5 popular items?
SELECT item, price, popularity FROM store 
ORDER BY popularity desc 
limit 5; 
