--Create a clothing store database

CREATE TABLE store (id INTEGER PRIMARY KEY, item TEXT, price INTEGER, quantity INTEGER, popularity INTEGER);

INSERT INTO store VALUES (1, "Tshirts", 2.99, 50, 90);
